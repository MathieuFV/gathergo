<div class="sticky-section">
  <div id="carouselExample" class="carousel slide" data-bs-touch="true">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= cl_image_tag(@destination.photo.key, class: "img d-block") if @destination.photo.present? %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag(@destination.photo.key, class: "img d-block") if @destination.photo.present? %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag(@destination.photo.key, class: "img d-block") if @destination.photo.present? %>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

<main>
  <div class="sticky-section">
    <div class="sticky-section main-title">
      <div class="d-flex text-center justify-content-between align-items-center mx-3">
        <div class="btn-group gap-2" role="group">
          <%= link_to :back, class: "btn header-btn", title: @destination.name do %>
            <i class="fa-solid fa-arrow-left"></i>
          <% end %>
        </div>

        <h2><%= @destination.name %></h2>

        <div class="btn-group gap-2" role="group">
          <%= link_to root_path, class: "btn header-btn", title: @destination.name do %>
            <i class="fa-solid fa-heart"></i>
          <% end %>
        </div>

      </div>
    </div>
    <div class="main-maps">
    </div>

    <div class="main-wiki container">
      <%= @destination.description %>
    </div>

  </div>
</main>




<%= render "shared/tabbar", active_button: "none" %>
