<%= render "shared/header_card",
  title: @trip.name
%>

<!-- Affichage des destinations du voyage -->
<%= render "shared/sliding_cards_section",
  title: "Destinations",
  remaining_days: 2,
  add_path: "#",
  cards: @destinations,
  category_path: trip_destinations_path(@trip),
  # Permet de crÃ©er des liens dynamiques qui s'adaptent au type d'objet
  # (ici, destination. Plus tard, accomodation, activities, etc. )
  card_path: ->(card) { trip_destination_path(@trip, card) }
%>

<ul>
  <% @destinations.each do |destination| %>
    <li><%= link_to destination[:name], trip_destination_path(id: destination.id, trip_id: @trip.id) %></li>
  <% end %>
</ul>

<%= render "shared/tabbar" %>
