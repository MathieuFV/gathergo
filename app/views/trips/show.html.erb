<%= render partial: 'shared/header_card',
  locals: {
    title: @trip.name,
    left_buttons: capture do %>
      <%= render 'shared/header_button',
          url: :root,
          icon_class: "fa-arrow-left",
          title: "Go back" %>
    <% end,
    right_buttons: capture do %>
    <%= render 'shared/header_button',
        url: trip_path(@trip),
        icon_class: "fa-user-plus",
        title: "Go back"
    %>
<% end
}%>

<!-- Affichage des destinations du voyage -->
<%= render "shared/sliding_cards_section",
  title: "Destinations",
  remaining_days: 2,
  add_path: "#",
  cards: @destinations,
  category_path: trip_destinations_path(@trip),
  # Permet de crÃ©er des liens dynamiques qui s'adaptent au type d'objet
  # (ici, destination. Plus tard, accomodation, activities, etc. )
  card_path: ->(card) { trip_destination_path(@trip, card) },
  add_path: new_trip_destination_path(@trip)
%>

<%= render "shared/tabbar", active_button: "hub" %>
