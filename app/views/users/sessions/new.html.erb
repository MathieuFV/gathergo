<%= render 'devise/shared/navbar' %>

<div id="background-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="<%= asset_path('destinations/ski.webp') %>" class="d-block w-100" alt="Ski trip background">
    </div>
    <div class="carousel-item">
      <img src="<%= asset_path('destinations/barcelona.webp') %>" class="d-block w-100" alt="Barcelona trip background">
    </div>
    <div class="carousel-item">
      <img src="<%= asset_path('destinations/nice.webp') %>" class="d-block w-100" alt="Nice trip background">
    </div>
    <div class="carousel-item">
      <img src="<%= asset_path('destinations/london.webp') %>" class="d-block w-100" alt="London trip background">
    </div>
    <div class="carousel-item">
      <img src="<%= asset_path('destinations/lisbon.webp') %>" class="d-block w-100" alt="Lisbon trip background">
    </div>
    <!-- Ajoute autant de carousel-item que nécessaire pour les images -->
  </div>
</div>

<div class="login-page">
  <div class="login-box">
    <h2>Sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- Champs du formulaire -->
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "michmich@hotmail.fr"} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", placeholder: "password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <!-- Bouton de soumission -->
      <div class="form-actions">
        <%= f.button :submit, "Sign in" %>
      </div>
    <% end %>
    <!-- Liens supplémentaires pour inscription et récupération du mot de passe -->
    <%= render "devise/shared/links" %>
  </div>
</div>
